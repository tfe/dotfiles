[user]
  name = <%= print("Git Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Git Email: "); STDOUT.flush; STDIN.gets.chomp %>
[github]
  user = plainspace
  token = <%= print("GitHub Token: "); STDOUT.flush; STDIN.gets.chomp %>
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  editor = <%= RUBY_PLATFORM =~ /darwin/ ? 'subl -wl1' : 'pico' %>
	excludesfile = <%= ENV['HOME'] %>/.gitignore
[alias]
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  up = pull --rebase
  pu = push
  lg = log -p
  ci = commit -v
  ca = commit -v --amend
  st = status
  br = branch
  co = checkout
  df = diff
  ap = add --patch .
  rb = rebase
  rbm = rebase master
  rbi = rebase -i head~10
  cp = cherry-pick
  wip = !git add . && git commit -m "WIP."
  unwip = !git reset head^
  pending = !git --no-pager log origin/master..master && echo
  track = !sh -c 'git branch --track "$0" "origin/$0" && git checkout "$0"'
  mt = mergetool
[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =
[mergetool "sourcetree"]
  cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true
[apply]
  whitespace = nowarn
[rerere]
	enabled = 1
[push]
	default = current
