# don't put duplicate lines in the history. See bash(1) for more options
export HISTCONTROL=ignoredups
# ... and ignore same sucessive entries.
export HISTCONTROL=ignoreboth


source ~/.bash/git-prompt.sh

if [[ `uname` == 'Darwin' ]]; then

  export EDITOR="subl -wl1"

  # Add RVM to PATH for scripting
  export PATH=$PATH:$HOME/.rvm/bin
  export PATH=$PATH:/usr/local/share/npm/bin
  export EXERCISM_GITHUB_CLIENT_ID=67a89a89470749d3ba96
  export EXERCISM_GITHUB_CLIENT_SECRET=d898f4a549c9b2ab5c7f351886ad73f4dc434449

  # MacPorts path additions
  export PATH=$PATH:/usr/local/bin:/usr/local/sbin:/opt/local/bin:/opt/local/sbin
  export MANPATH=$MANPATH:/opt/local/share/man

elif [[ `uname` == 'Linux' ]]; then

  export EDITOR='nano -w'

fi



