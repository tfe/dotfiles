# ALIASES
alias fs="foreman start"

alias gs="git status"
alias gcm="git checkout master"
alias gpom="git pull origin master && git fetch origin"
alias gmmnff="git merge master --no-ff"
alias gp="git pull"
alias gap="git add --patch"
